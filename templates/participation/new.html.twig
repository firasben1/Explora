{% extends 'base1.html.twig' %}

    {% block body %}
        <style>
            /* CSS styles */
            .white-input {
                background-color: #ffffff;
                border: 1px solid #ced4da;
                border-radius: 0.25rem;
                padding: 0.375rem 0.75rem;
            }
    
            .white-input::placeholder {
                color: #6c757d;
            }
    
            .form-container {
                background-color: #f8f9fa;
                border: 1px solid #e2e6ea;
                border-radius: 10px;
                padding: 20px;
                margin-top: 50px;
            }
    
            .form-title {
                text-align: center;
                color: #86b817;
            }
    
            .form-button {
                text-align: center;
                margin-top: 20px;
            }
        </style>
    
        <div class="container form-container">
            <h1 class="form-title">Add Participant {{ participantIndex }} of {{ nbrParticp }}</h1>
    
            <div class="row justify-content-center">
                <div class="col-md-8">
                    {{ form_start(form, { action: path('app_participation_new', {'nbrParticp': nbrParticp, 'id_reservation': id_reservation, 'participantIndex': participantIndex}) }) }}
                    
                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control white-input', 'placeholder': 'Your Email'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
    
                    <div class="form-group">
                        {{ form_label(form.numero, 'Numero', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.numero, {'attr': {'class': 'form-control white-input', 'placeholder': 'Numero'}}) }}
                        {{ form_errors(form.numero) }}
                    </div>
    
                    <div class="form-group">
                        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control white-input', 'placeholder': 'Nom'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
    
                    <div class="form-group">
                        {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.prenom, {'attr': {'class': 'form-control white-input', 'placeholder': 'Prenom'}}) }}
                        {{ form_errors(form.prenom) }}
                    </div>
    
                    <div class="form-button">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% endblock %}
    