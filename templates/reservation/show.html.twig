{% extends 'base2.html.twig' %}

{% block title %}

<title>Reservation</title>
{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reservation.Etat }}</td>
            </tr>
        </tbody>
    </table>
    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Numero</th>
            <th>Nom</th>
            <th>Prenom</th>
        </tr>
        </thead>
        <tbody>
        {% for participation in participations %}
            <tr>
                <td>{{ participation.Email }}</td>
                <td>{{ participation.Numero }}</td>
                <td>{{ participation.Nom }}</td>
                <td>{{ participation.Prenom }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button type="button" class="btn btn-success" onclick="window.location.href='{{ path('app_reservation_index') }}'">Back to List</button>

    <button type="button" class="btn btn-success" onclick="window.location.href='{{ path('app_reservation_edit', {'id': reservation.id}) }}'">Edit</button>


{% endblock %}
