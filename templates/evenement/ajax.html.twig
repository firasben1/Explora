<div class="card-holder">
    {% for evenement in evenements %}
        <div class="card">
            <div id="carousel{{evenement.id}}" class="carousel slide" data-bs-ride="carousel">
                <figure class="entry-media">
                    <img src=" {{ vich_uploader_asset(evenement, 'imageFile') }}" width="600" alt="evenement Image">
                               {{ evenement.imageFile }}

                </figure><!-- End .entry-media -->

                <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{evenement.id}}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel{{evenement.id}}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="card-info">
                <h2>{{ evenement.Nom }}</h2>
                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="show-details-btn"><i class="fas fa-eye"></i> Show</a>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="show-details-btn"><i class="fas fa-edit"></i> Edit</a>
                <form method="post" action="{{ path('app_evenement_delete', {'id': evenement.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="show-details-btn">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ evenement.id) }}">
                    <button class="btn-delete"><i class="fas fa-trash"></i>Delete</button>
                </form></div>
        </div>
    {% endfor %}
</div>