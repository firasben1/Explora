{% extends 'base1.html.twig' %}

    {% block title %}
        Edit Reclamation
    {% endblock %}
    
    {% block body %}
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <h1 class="text-center mb-4">Edit Reclamation</h1>
                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                   
                    <div class="form-group">
                        {{ form_row(form.Titre, {'label': 'Titre', 'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.Titre) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.description, {'label': 'Description', 'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.imageFile, {'label': 'Image', 'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.imageFile) }}
                    </div>
                    <div class="row justify-content-center mt-3">
                        <div class="col-auto">
                            <a href="{{ path('list_reclamation') }}" class="btn btn-secondary">Back to list</a>
                        </div>
                        <div class="col-auto">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    {% endblock %}
    