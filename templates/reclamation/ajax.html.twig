<div class="card-holder">
    {% for reclamation in reclamations %}
        <div class="card">
            <div id="carousel{{reclamation.id}}" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for image in reclamationImages[reclamation.id] %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ asset('images_directory/' ~ image.getUrlImage()) }}" class="card-img" alt="...">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carousel{{reclamation.id}}" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carousel{{reclamation.id}}" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="card-info">
                <h2>{{ reclamation.Nom }}</h2>
                <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="show-details-btn"><i class="fas fa-eye"></i> Show</a>
                <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="show-details-btn"><i class="fas fa-edit"></i> Edit</a>
                <form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="show-details-btn">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                    <button class="btn-delete"><i class="fas fa-trash"></i>Delete</button>
                </form></div>
        </div>
    {% endfor %}
</div>