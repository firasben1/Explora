{% extends 'base2.html.twig' %}

{% block body %}
    <title>New Response</title>

    <div class="container mt-5">
        <h1 class="mb-4">Add Response</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}

                

                

                <div class="form-group row">
                    <label for="reponse" class="col-md-3 col-form-label font-weight-bold text-primary">Response</label>
                    <div class="col-md-9">
                        {{ form_widget(form.reponse, { 'attr': {'class':'form-control'} }) }}
                        {{ form_errors(form.reponse) }}
                    </div>
                </div>

                <div class="form-group row">
                    <label for="statut" class="col-md-3 col-form-label font-weight-bold text-primary">Status</label>
                    <div class="col-md-9">
                        {{ form_widget(form.statut, { 'attr': {'class':'form-control'} }) }}
                        {{ form_errors(form.statut) }}
                    </div>
                </div>

                <div class="form-group row justify-content-end">
                    <div class="col-md-9">
                        {{ form_row(form.save, { 'attr': {'class': 'btn btn-primary btn-rounded'} }) }}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
