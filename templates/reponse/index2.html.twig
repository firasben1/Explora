{% extends 'base2.html.twig' %}

{% block body %}
 
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <h6 class="text-white text-capitalize ps-3">Table of Response</h6>
              </div>
            </div>
            <div class="card-body px-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table table-striped align-items-center mb-0">
                  <thead class="thead-light">
                    <tr>
                      <th class="text-uppercase text-center text-xxs font-weight-bolder opacity-7">Id</th>
                      <th class="text-center text-uppercase text-center text-xxs font-weight-bolder opacity-7">Reclamation</th>
                      <th class="text-center text-uppercase text-center text-xxs font-weight-bolder opacity-7">statut</th>
                      <th class="text-center text-uppercase text-center text-xxs font-weight-bolder opacity-7">dateReponse</th>
                      <th class="text-uppercase text-center text-xxs font-weight-bolder opacity-7">Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                      {% for reponse in reponses %}
                    <tr>
                      <td class="text-center">{{ reponse.id }}</td>
                      <td class="text-center">{{ reponse.reclamation }}</td>

                      <td class="text-center">{{ reponse.statut}}</td>
                      <td class="text-center">{{ reponse.dateReponse | date('Y-m-d H:i:s') }}</td>


                      <td class="text-center">
                        <div class="actions">
                          <a href="{{ path('app_reponse_show_back', {'id': reponse.id}) }}" class="action-item mx-1">
                            <i class="fa fa-eye"></i>
                          </a>
                         
                        </div>
                      </td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
     <div class="d-flex justify-content-center">
 
</div>
{% endblock %}
